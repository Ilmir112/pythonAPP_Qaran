<SelectGameButton>

    font_size: '30sp'
    background_color: 1, 1 ,1, 0
    on_release: app.select_game(self.text)
    canvas.before:
        Color:
            rgb:  40/255, 5/255, 109/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]




MDScreen:
    name: 'select_game'
    MDFloatLayout:
        md_bg_color: rgba(0, 0, 255, 0.5)
        Image:
            source: 'data/logo/koran-oboi.jpg'
            size: 1, 1

        MDLabel:
            text: "выбор игры"
            font_size: '55sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .8}
            color: 1, 1, 1, 1
            line_height: 1.1


        MDGridLayout:
            rows: 2
            cols: 2
            size_hint: .6, .3
            pos_hint: {'center_x': .5, 'center_y': .47}
            spacing: 15

            SelectGameButton:
                text: 'Слова 1- 20'
            SelectGameButton:
                text: 'Слова 20- 40'
#            SelectGameButton:
#                text: 'игра 3'
#            SelectGameButton:
#                text: 'игра 4'
        Button:
            text: 'НАЗАД'
            font_size: '40sp'
            size_hint: .55, .12
            pos_hint: {'center_x': .5, 'center_y': .15}
            background_color:2, 1, 1, 0
            on_release:
                root.manager.current = 'main'
            canvas.before:
                Color:
                    rgb: rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]
