<SelectGameButton>

    font_size: '40sp'
    background_color: 1, 1 ,1, 0
    on_release: app.select_game(self.text)
    canvas.before:
        Color:
            rgb:  40/255, 5/255, 109/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]
MDScreen:
    name: 'select_game'
    MDFloatLayout:
        md_bg_color: rgba( 60, 12, 156, 255)

        MDLabel:
            text: "выбор игры"
            font_size: '55sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .8}
            color: 1, 1, 1, 1
            line_height: 1.1
        MDGridLayout:
            rows: 3
            cols: 1
            size_hint: .6, .3
            pos_hint: {'center_x': .5, 'center_y': .47}
            spacing: 15

        MDGridLayout:
            rows: 3
            cols: 1
            size_hint: .6, .3
            pos_hint: {'center_x': .5, 'center_y': .47}
            spacing: 15

            SelectGameButton:
                text: 'Игра 1'
            SelectGameButton:
                text: 'игра 2'
            SelectGameButton:
                text: 'игра 3'
            SelectGameButton:
                text: 'игра 4'
        Button:
            text: 'back'
            font_size: '40sp'
            size_hint: .55, .12
            pos_hint: {'center_x': .5, 'center_y': .15}
            background_color:2, 1, 1, 0
            on_release:
                root.manager.current = 'main'
            canvas.before:
                Color:
                    rgb: rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]
