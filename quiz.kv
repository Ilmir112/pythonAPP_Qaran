<OptionButton>

    font_size: '40sp'
    background_color: 1, 1 ,1, 0
    bg_color: 40/255, 6/255, 109/255, 1
    on_release: app.quiz(self.text, self)
    canvas.before:
        Color:
            rgb: root.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]
<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


MDScreen:
    question: question
    name: 'quiz'



    MDNavigationLayout:

        MDScreenManager:


            MDScreen:



                MDTopAppBar:
                    title: "Изучение Корана"
                    elevation: 4
                    pos_hint: {"top": 1}
                    md_bg_color: "#e7f4c0"
                    specific_text_color: "#4a4939"
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                MDFloatLayout:
                    md_bg_color: 2, 1, 1,1
                    Image:
                        source: 'data/logo/koran-oboi.jpg'
                        size: 1, 1

                    MDLabel:
                        id: question
                        text: ""
                        font_size: '60sp'
                        halign: 'center'
                        pos_hint: {'center_x': .5, 'center_y': .86}
                        color: 51, 12, 21, 13
                        line_height: 1.1
                    MDGridLayout:
                        rows: 2
                        cols: 2
                        size_hint: .6, .3
                        pos_hint: {'center_x': .5, 'center_y': .59}
                        spacing: 15
                        OptionButton:
                            id: answer1
                            text: ''

                        OptionButton:
                            id: answer2
                            text: ''

                        OptionButton:
                            id: answer3
                            text: ''

                        OptionButton:
                            id: answer4
                            text: ''



                    MDRaisedButton:
                        text: 'Следующий вопрос'
                        font_size: '40sp'
                        size_hint: .55, .12
                        pos_hint: {'center_x': .5, 'center_y': .27}
                        color: rgba(251, 187, 29, 255)
                        background_color:2, 1, 1, 0
                        on_release:
                            root.manager.current = 'main'
                        canvas.before:
                            Color:
                                rgb: 1, 1, 1, 1
                            RoundedRectangle:
                                size: self.size
                                pos: self.x, self.y + 5
                                radius: [10]

                    MDRaisedButton:
                        text: 'выход'
                        font_size: '40sp'
                        size_hint: .55, .12
                        pos_hint: {'center_x': .5, 'center_y': .12}
                        color: rgba(251, 187, 29, 255)
                        background_color:2, 1, 1, 0
                        on_release:
                            root.manager.current = 'main'
                        canvas.before:
                            Color:
                                rgb: rgba(251, 187, 29, 255)
                            RoundedRectangle:
                                size: self.size
                                pos: self.x, self.y + 5
                                radius: [10]













        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Оглавление"
                    title_color: "#4a4939"
                    text: "Какая то надпись"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Изучение"


                DrawerClickableItem:
                    icon: 'account'

                    text_right_color: "#4a4939"
                    text: "Аккаунт"

                DrawerClickableItem:
                    icon: 'file-cog'

                    text_right_color: "#4a4939"
                    text: "Настройки"

                DrawerClickableItem:
                    icon: 'star-crescent'

                    text_right_color: "#4a4939"
                    text: "Достижения"

                DrawerClickableItem:
                    icon: "abjad-arabic"
                    text: "о авторах"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Придумай свою историю"

                DrawerLabelItem:
                    icon: "information-outline"
                    text: "Инфорция"

                DrawerLabelItem:
                    icon: "information-outline"
                    text: "информация"