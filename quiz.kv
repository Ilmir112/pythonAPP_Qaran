<AnswerButton>

    font_size: '40sp'
    background_color: 1, 1 ,1, 0
    bg_color: 40/255, 6/255, 109/255, 1
    on_release: app.quiz(self.text, self)
    canvas.before:
        Color:
            rgb: root.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]
MDScreen:
    question: question
    correct_answer: correct_answer
    wrong_answer: wrong_answer
    name: 'quiz'

    MDFloatLayout:
        md_bg_color: rgba(0, 0, 255, 0.5)
        Image:
            source: 'data/logo/koran-oboi.jpg'
            size: 1, 1
        MDGridLayout:
            rows: 1
            cols: 1
            size_hint: .6, .3
            pos_hint: {'center_x': .9, 'center_y': .90}
            spacing: 15
            MDLabel:
                id: correct_answer
                text: ''
                font_size: '30sp'
                halign: 'center'
                pos_hint: {'center_x': .9, 'center_y': .70}
                color: 1, 1, 1, 1
                line_height: 1.1

            MDLabel:
                id: wrong_answer
                text: ''
                font_size: '30sp'
                halign: 'center'
                pos_hint: {'center_x': .4, 'center_y': .100}
                color: 1, 1, 1, 1
                line_height: 1.1


        MDLabel:
            id: question
            text: ''
            font_size: '30sp'
            halign: 'center'
            pos_hint: {'center_x': .4, 'center_y': .86}
            color: 1, 1, 1, 1
            line_height: 1.1
        MDGridLayout:
            rows: 3
            cols: 2
            size_hint: .6, .3
            pos_hint: {'center_x': .4, 'center_y': .59}
            spacing: 15
            AnswerButton:
                id: answer1
            AnswerButton:
                id: answer2
            AnswerButton:
                id: answer3
            AnswerButton:
                id: answer4
            AnswerButton:
                id: answer5
            AnswerButton:
                id: answer6

        Button:
            text: 'Следующий вопрос'
            font_size: '30sp'
            size_hint: .55, .12
            pos_hint: {'center_x': .4, 'center_y': .27}
            color: rgba(251, 187, 29, 255)
            background_color:1, 1, 1, 0
            on_release:
                app.next_question()
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]

        Button:
            text: 'конец игры'
            font_size: '40sp'
            size_hint: .55, .12
            pos_hint: {'center_x': .4, 'center_y': .12}
            background_color:2, 1, 1, 0
            on_release:
                app.final_score()

            canvas.before:
                Color:
                    rgb: rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]