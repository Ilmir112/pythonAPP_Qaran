<SelectSuraStudy>

    font_size: '30sp'
    background_color: 1, 1 ,1, 0
    #on_release: root.manager.current = 'quiz'
    canvas.before:
        Color:
            rgb:  40/255, 5/255, 109/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]

MDScreen:
    name: 'sura_study'

    MDFloatLayout:
        md_bg_color: rgba(0, 0, 255, 0.5)
        Image:
            source: 'data/logo/koran-oboi.jpg'
            size: 1, 1


        MDTopAppBar:
            title: "Qaran Academy"
            elevation: 4
            panel_color: app.theme_cls.primary_color
            text_color_active: .2, .2, .2, 1
            text_color_normal: .9, .9, .9, 1
            use_text: False

            right_action_items:
                [
                ["home", lambda x: app.callback('main'), "Главная"],
                #["cogs", lambda x: app.callback(setting), "Настройки"],
                ["star-crescent", lambda x: app.callback('select_surah'), "Изучение"],
                #["message-reply", lambda x: app.callback(x), "авторы"],
                ]




        MDLabel:
            text: "Изучение новых слов "
            font_size: '55sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .8}
            color: 1, 1, 1, 1
            line_height: 1.1


        MDGridLayout:
            rows: 3
            cols: 1
            size_hint: .6, .3
            pos_hint: {'center_x': .5, 'center_y': .47}
            spacing: 15

            SelectSuraStudy:
                text: 'Изучение'
                on_release: root.manager.current = 'quiz'


            SelectGameButton:
                text: 'Викторина'
                on_release: root.manager.current = 'quiz'
