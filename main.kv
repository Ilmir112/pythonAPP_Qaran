MDScreen:
    name: 'main'
    MDFloatLayout:
        md_bg_color: 1, 1, 1,1
        Image:
            source: 'data/logo/koran-oboi.jpg'
            size: 1, 1
        MDLabel:
            text: "приветствие"
            font_size: '55sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .7}
            color: 1, 1, 1, 1
            line_height: 1.1
        Button:
            text: 'start'
            font_size: '40sp'
            size_hint: .55, .12
            pos_hint: {'center_x': .5, 'center_y': .15}
            background_color:1, 1, 1,0
            on_release:
                root.manager.current = 'select_game'
            canvas.before:
                Color:
                    rgb:rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y +5
                    radius: [10]