MDScreen:
    name: 'main'


    MDFloatLayout:
        md_bg_color: 1, 0, 1, 1


        MDNavigationRail:
            MDNavigationRailItem:
                text: "Главная"
                icon: "home"
                on_release:
                    root.manager.current = 'main'

            MDNavigationRailItem:
                text: "Аккаунт"
                icon: "account"


            MDNavigationRailItem:
                text: "Курсы"
                icon: "star-crescent"
                on_release:
                    root.manager.correct = 'select_game'



            MDNavigationRailItem:
                text: "Настройки"
                icon: "cogs"
               # on_release:
               #     root.manager.correct = 'setting'

        MDLabel:
            text: "приветствие"
            font_size: '55sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .7}
            color: 1, 1, 0, 1
            line_height: 1.1
        Button:
            text: 'GO'
            font_size: '40sp'
            size_hint: .55, .12
            pos_hint: {'center_x': .5, 'center_y': .15}
            background_color:1, 1, 1,0
            on_release:
                root.manager.current = 'select_game'
            canvas.before:
                Color:
                    rgb:rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y +5
                    radius: [10]