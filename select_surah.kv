<SelectGameButton>

    font_size: '30sp'
    background_color: 1, 1 ,1, 0
    on_release: app.sura_study(self.text)
    canvas.before:
        Color:
            rgb:  40/255, 5/255, 109/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]
